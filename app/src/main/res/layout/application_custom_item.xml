<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="302dp"
    android:layout_height="112dp"
    android:layout_marginLeft="40dp"
    android:layout_marginTop="95dp"
    android:layout_marginRight="14sp"
    android:animateLayoutChanges="false"
    android:clickable="true"
    android:focusable="true"
    android:background="@drawable/offer_bg">

    <TextView
        android:id="@+id/titreApp_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="57dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_semibold"
        android:paddingLeft="3sp"
        android:text="Apple"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageApp_iv"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/apple"
        app:circularflow_angles="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomCompagnieApp_tv"
        android:layout_width="wrap_content"
        android:layout_height="24sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="41dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="2dp"
        android:text="Web Developper"
        android:textColor="#00B0FF"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statutApp_tv"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="2dp"
        android:text="Approved, wait for a message"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statutApp_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="2dp"
        android:text="Status:"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateApp_tv"
        android:layout_width="wrap_content"
        android:layout_height="26sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96dp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/poppins_medium"
        android:paddingLeft="2dp"
        android:text="05/04/2024"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateApp_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="26sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="77dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Apply date :"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/statut_iv"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="240dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="14dp"
        android:src="@drawable/icon1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</RelativeLayout>