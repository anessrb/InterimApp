<!-- button_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Définir la couleur de la bordure -->
    <stroke
        android:width="2dp"
        android:color="#6E00B0FF" /> <!-- Vous pouvez remplacer @color/border_color par la couleur de votre choix -->

    <!-- Définir les coins arrondis si nécessaire -->
    <corners
        android:radius="8dp" /> <!-- Vous pouvez ajuster la valeur du rayon selon vos préférences -->

</shape>
